<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:padding="16dp"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_currency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GBP"
                android:paddingBottom="8dp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:textSize="24sp"
                />

            <ImageView
                android:id="@+id/iv_base_currency_img"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginBottom="8dp"
                android:layout_below="@+id/tv_currency"
                android:src="@drawable/btc"
                />

            <ImageView
                android:id="@+id/iv_equality"
                android:layout_below="@+id/tv_currency"
                android:layout_marginBottom="8dp"
                android:layout_toRightOf="@+id/iv_base_currency_img"
                android:layout_toEndOf="@+id/iv_base_currency_img"
                android:layout_alignBaseline="@id/iv_base_currency_img"
                android:layout_width="30dp"
                android:src="@mipmap/ic_challenge"
                android:layout_height="30dp"/>

            <ImageView
                android:id="@+id/iv_base_currency"
                android:layout_below="@+id/tv_currency"
                android:layout_toRightOf="@+id/iv_equality"
                android:layout_toEndOf="@+id/iv_equality"
                android:layout_marginBottom="8dp"
                android:layout_alignBaseline="@id/iv_base_currency_img"
                android:layout_width="30dp"
                android:visibility="gone"
                android:src="@mipmap/ic_launcher"
                android:layout_height="30dp"/>

            <TextView
                android:id="@+id/tv_xchange_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_currency"
                android:layout_marginBottom="8dp"
                android:layout_toRightOf="@+id/iv_base_currency"
                android:layout_alignBaseline="@id/iv_base_currency_img"
                android:text="5184"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:textSize="24sp"
                />

            <ImageView
                android:id="@+id/iv_eth_base_currency_img"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_below="@+id/iv_base_currency_img"
                android:src="@drawable/eth"
                />

            <ImageView
                android:id="@+id/iv_eth_equality"
                android:layout_below="@+id/iv_equality"
                android:layout_toRightOf="@+id/iv_base_currency_img"
                android:layout_toEndOf="@+id/iv_base_currency_img"
                android:layout_alignBaseline="@id/iv_base_currency_img"
                android:layout_width="30dp"
                android:src="@mipmap/ic_challenge"
                android:layout_height="30dp"/>

            <ImageView
                android:id="@+id/iv_eth_base_currency"
                android:layout_below="@+id/iv_base_currency"
                android:layout_toRightOf="@+id/iv_equality"
                android:layout_toEndOf="@+id/iv_equality"
                android:layout_alignBaseline="@id/iv_base_currency_img"
                android:layout_width="30dp"
                android:visibility="gone"
                android:src="@mipmap/ic_launcher"
                android:layout_height="30dp"/>

            <TextView
                android:id="@+id/tv_eth_xchange_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_xchange_amount"
                android:layout_toRightOf="@+id/iv_base_currency"
                android:layout_alignBaseline="@id/iv_base_currency_img"
                android:text="5184"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:textSize="24sp"
                />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>